<Window x:Class="Prb.Inleiding.FirstApp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prb.Inleiding.FirstApp.Wpf"
        mc:Ignorable="d"
        Title="My First Wpf App" Height="170" Width="350">
    <Grid Margin="2,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Please enter your name:" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Button x:Name="btnOK" Content="OK" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="255,41,0,0" VerticalAlignment="Top" Height="18" Click="btnOK_Click"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="-64,41,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
