<Window x:Class="Prb.Lines.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prb.Lines.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1208" Loaded="Window_Loaded">
    <Grid>
        <Canvas x:Name="canSquare" HorizontalAlignment="Left" Height="500" Margin="10,10,0,0" VerticalAlignment="Top" Width="500" Background="Black"/>
        <Button x:Name="btnDrawHorizontalLine" Content="Teken &#xD;&#xA;hor. lijn" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="42" Width="56" Click="BtnDrawHorizontalLine_Click"/>
        <Label x:Name="lblCoordinates" Content="" HorizontalAlignment="Left" Margin="428,515,0,0" VerticalAlignment="Top" Width="335" BorderThickness="2,2,2,2" BorderBrush="Black"/>
        <Label Content="Positie" HorizontalAlignment="Left" Margin="517,67,0,0" VerticalAlignment="Top"/>
        <Label Content="Lengte" HorizontalAlignment="Left" Margin="517,98,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbPositionFromTop" HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top" Width="56" />
        <ComboBox x:Name="cmbPositionFromLeft" HorizontalAlignment="Left" Margin="640,69,0,0" VerticalAlignment="Top" Width="55" />
        <ComboBox x:Name="cmbLengthHorizontal" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="56" />
        <ComboBox x:Name="cmbLengthVertical" HorizontalAlignment="Left" Margin="640,100,0,0" VerticalAlignment="Top" Width="55" />
        <Button x:Name="btnReset" Content="Wis &#xD;&#xA;Alles" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Width="56" Click="BtnReset_Click"/>
        <Canvas x:Name="canSquareRight" HorizontalAlignment="Left" Height="500" Margin="700,10,0,0" VerticalAlignment="Top" Width="500" Background="Black"/>
        <Button x:Name="btnDrawVerticalLine" Content="Teken &#xD;&#xA;vert. lijn" HorizontalAlignment="Left" Margin="640,10,0,0" VerticalAlignment="Top" Height="42" Width="56" Click="BtnDrawVerticalLine_Click"/>

    </Grid>
</Window>
