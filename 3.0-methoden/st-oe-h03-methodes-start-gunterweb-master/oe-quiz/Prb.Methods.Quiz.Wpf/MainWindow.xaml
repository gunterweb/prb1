<Window x:Class="Prb.Methods.Quiz.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quiz" Height="334.072" Width="760.111">
    <Grid x:Name="grdQuiz">
        <WrapPanel x:Name="wrpQuestion1" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="734" Margin="10,59,0,0" Background="#FFE5FBFD">
            <Label x:Name="lblQuestion1" Content="In welke omgeving kun je in C# apps &#xD;&#xA;voor Android programmeren?" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="240" Height="49"/>
            <Label x:Name="lblFeedBack1" Content="Kies het juiste antwoord" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="145" Height="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="btnAnswer1b" Content=".Net Core" HorizontalAlignment="Left" Margin="10,3,0,0" Width="99" Height="44" />
            <Button x:Name="btnAnswer1a" Content="Visual C#" HorizontalAlignment="Left" Margin="10,3,0,0" Width="99" Height="44"/>
            <Button x:Name="btnAnswer1c" Content="Xamarin" HorizontalAlignment="Left" Margin="10,3,0,0" Width="97" Height="44" />
        </WrapPanel>
        <WrapPanel x:Name="wrpQuestion2" HorizontalAlignment="Left" Height="51" VerticalAlignment="Top" Width="734" Margin="10,115,0,0" Background="#FFE5FBFD">
            <Label x:Name="lblQuestion2" Content="In welke omgeving kun je in C# &#xD;&#xA;programma's programmeren voor Linux?" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="240" Height="49" Visibility="Visible"/>
            <Label x:Name="lblFeedBack2" Content="Kies het juiste antwoord" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="145" Height="50" HorizontalContentAlignment="Center" Visibility="Visible" VerticalContentAlignment="Center"/>
            <Button x:Name="btnAnswer2a" Content="Visual C#" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="99" Height="44"  Visibility="Visible"/>
            <Button x:Name="btnAnswer2b" Content=".Net Core" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="99" Height="44"  Visibility="Visible"/>
            <Button x:Name="btnAnswer2c" Content="Xamarin" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="97" Height="44"  Visibility="Visible"/>
        </WrapPanel>
        <WrapPanel x:Name="wrpQuestion3" HorizontalAlignment="Left" Height="53" VerticalAlignment="Top" Width="734" Margin="10,171,0,0" Background="#FFE5FBFD">
            <Label x:Name="lblQuestion3" Content="In welke omgeving kun je in C# apps &#xA;voor een iPad programmeren?" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="240" Height="49" Visibility="Visible"/>
            <Label x:Name="lblFeedBack3" Content="Kies het juiste antwoord" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="145" Height="50" HorizontalContentAlignment="Center" Visibility="Visible" VerticalContentAlignment="Center"/>
            <Button x:Name="btnAnswer3a" Content="Visual C#" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="99" Height="44"  Visibility="Visible"/>
            <Button x:Name="btnAnswer3b" Content=".Net Core" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="99" Height="44" Visibility="Visible"/>
            <Button x:Name="btnAnswer3c" Content="Xamarin" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="97" Height="44"  Visibility="Visible"/>
        </WrapPanel>
        <Label Content="Score:" HorizontalAlignment="Left" Margin="679,11,0,0" VerticalAlignment="Top" Width="43" FontWeight="Bold" HorizontalContentAlignment="Right"/>
        <Button x:Name="btnReset" Content="Opnieuw" HorizontalAlignment="Left" Margin="297,238,0,0" VerticalAlignment="Top" Width="111" Height="44" />
        <Label x:Name="lblScore" Content="0" HorizontalAlignment="Left" Margin="722,11,0,0" VerticalAlignment="Top" Width="22" FontWeight="Bold" HorizontalContentAlignment="Right"/>
    </Grid>
</Window>
