<Window x:Class="Prb.FavoriteCity_Void.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prb.FavoriteCity_Void.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lstCities" HorizontalAlignment="Left" Height="88" Margin="17,11,0,0" VerticalAlignment="Top" Width="116" SelectionChanged="LstCities_SelectionChanged"/>
        <Label x:Name="lblFavoriteCity" Content="Kies een stad" HorizontalAlignment="Left" Margin="144,10,0,0" VerticalAlignment="Top" Height="57" Width="189"/>
        <Button x:Name="btnNL" Content="Nederlands" HorizontalAlignment="Left" Margin="17,104,0,0" VerticalAlignment="Top" Width="75" Click="BtnNL_Click"/>
        <Button x:Name="btnENG" Content="English" HorizontalAlignment="Left" Margin="144,104,0,0" VerticalAlignment="Top" Width="75" Click="BtnENG_Click"/>
    </Grid>
</Window>
