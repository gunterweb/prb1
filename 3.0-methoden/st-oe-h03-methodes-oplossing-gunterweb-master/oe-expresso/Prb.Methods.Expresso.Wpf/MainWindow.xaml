<Window x:Class="Prb.Methods.Expresso.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prb.Methods.Expresso.Wpf"
        mc:Ignorable="d"
        Title="Express-o" Height="364.8" Width="818" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="186*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmbSize" HorizontalAlignment="Left" Margin="14.4,31,0,0" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
        <Label Content="Grootte:" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstCoffees" HorizontalAlignment="Left" Height="100" Margin="14.4,58,0,0" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
        <Label Content="Koffiesoort:" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtNewCoffee" HorizontalAlignment="Left" Height="23" Margin="535,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Grid.Column="1"/>
        <Label Content="Nieuw:" HorizontalAlignment="Left" Margin="483.4,31,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="btnAdd" Content="Toevoegen" HorizontalAlignment="Left" Margin="654.4,34,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="Add_Click" Grid.Column="1"/>
        <TextBox x:Name="txtCups" HorizontalAlignment="Left" Height="23" Margin="14.4,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
        <Label Content="Kopjes:" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTip" HorizontalAlignment="Left" Height="23" Margin="14.4,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
        <Label Content="Fooi:" HorizontalAlignment="Left" Margin="10,219,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOrder" Content="Bestel" HorizontalAlignment="Left" Margin="14.4,247,0,0" VerticalAlignment="Top" Width="200" Click="Order_Click" Grid.Column="1"/>
        <ListBox x:Name="lstOrders" HorizontalAlignment="Left" Height="259" Margin="219,31,0,0" VerticalAlignment="Top" Width="259" Background="#FFEEEEEE" Grid.Column="1"/>
        <Button x:Name="btnQueue" Content="Plaats in wachtrij" Grid.Column="1" HorizontalAlignment="Left" Margin="14,271,0,0" VerticalAlignment="Top" Width="200" Click="Queue_Click"/>
        <StackPanel x:Name="stpQueue" Orientation="Horizontal" Grid.Column="1" Margin="483,67,14.2,231.2">
            <Label Content="Wachtrij:" VerticalAlignment="Top" Height="25"/>
            <Button x:Name="btnEmptyQueue" Content="Wachtrij afhandelen" VerticalAlignment="Top" Margin="0,0,0,0" Height="25" Width="190" Click="EmptyQueue_Click" />
        </StackPanel>
        <Label Content="Aantal klanten:" Grid.Column="1" HorizontalAlignment="Left" Margin="483,219,0,0" VerticalAlignment="Top" Height="26" Width="101"/>
        <Label Content="Koffies verkocht:" Grid.Column="1" HorizontalAlignment="Left" Margin="483,244,0,0" VerticalAlignment="Top" Width="101"/>
        <Label Content="Inkomsten:" Grid.Column="1" HorizontalAlignment="Left" Margin="483,264,0,0" VerticalAlignment="Top" Width="101"/>
        <Label x:Name="lblNumberOfCustomers" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="584,219,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="lblCoffeesSold" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="584,244,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="lblProfit" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="584,264,0,0" VerticalAlignment="Top" Width="145"/>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="75" Margin="584,109,0,0" VerticalAlignment="Top" Width="78" Source="img/coffee-break.png"/>


    </Grid>
</Window>
